<div class=" nav-padding allpage">
  <div class=" container category-cards-middle">
    <div class="title-categories">
        <span class="title-aligned">Top 5 Categories : </span>
    </div>
    <div class="cards display-of-cards">
        <%= link_to  params.merge(cat: "Photography").permit(:cat, :querry) do %>
            <div class="card-category-discover-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path("category-pictures/photography-category.jpg") %>')">
                Photography
            </div>
        <% end %>

        <%= link_to params.merge(cat: "tools").permit(:cat, :query) do %>
            <div class="card-category-discover-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path("category-pictures/Tools-category-picture.jpg") %>')">
                Tools
            </div>
        <% end %>

        <%= link_to params.merge(cat: "cycling").permit(:cat, :querry) do %>
            <div class="card-category-discover-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path("category-pictures/cycling-category.jpg") %>')">
                Cycling
            </div>
        <% end %>

        <%= link_to params.merge(cat: "clothing").permit(:cat, :querry) do %>
            <div class="card-category-discover-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path("category-pictures/clothing-category.jpg") %>')">
                Clothing
            </div>
        <% end %>

        <%= link_to params.merge(cat: "lifestyle").permit(:cat, :querry) do %>
            <div class="card-category-discover-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= asset_path("category-pictures/lifestyle-category.jpg") %>')">
                Lifestyle
            </div>
        <% end %>
      </div>
    </div>

  <div class="container category-cards-middle">
    <div class="title-categories">
      <span class="title-aligned">Top 5 creators :</span>
    </div>
    <div class="card-5-creators">
      <div class="row">
        <% @all_likes.each do |user|  %>
          <div class="user-info-discover user-info-left">
            <div class="profile-user-card profile-headline">
              <!-- <h3> <span class="profile-headline-highlight"> creator </span></h3> -->
              <div class="d-flex justify-content-center">
              <%= cl_image_tag user.photo, width: 200, height: 200, crop: :fill, class: "profile-about-avatar" %>
              </div>
              <h3>
                <span class="profile-headline-highlight"><%= user.first_name %></span>
                <span class="profile-headline-highlight"><%= user.last_name %></span>
              </h3>
              <div class="profile-user-content-discover">
                <h5> <%= user.creator_type %></h5>
                <p class= ""> <%= user.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container category-cards-middle">
    <div class="title-categories">
      <span class="title-aligned" >4 Random products :</span>
    </div>
    <div class="card-5-creators">
      <div class="row">
        <%  @random_products.each do |product| %>
        <div class="col-3 hiive-card-container-discover">

          <div class="hiive-card">

          <div class="hiive-card-photo-discover" style="background-image: url(<%= product.photo %>)">
          </div>

          <div class="hiive-card-content">
          <p class="hiive-card-title"><%= product.title.truncate(67)%></p>
          <div class="d-flex justify-content-between">

          <% if product.user != current_user%>
          <div class="like-button-<%= product.id %>">

            <% if product.likes.where(user: @current).empty? %>

              <%= render partial: "likes/like", locals: {
                product: product
              } %>

            <% else %>
              <%= render partial: "likes/unlike", locals: {
                product: product,
                like: product.likes.find_by_user_id(current_user.id)
              } %>
            <% end %>
          </div>
          <% else %>
            <div></div>
          <% end %>
          <p class="hiive-card-price"><%= product.price == '' ? 'currently unavailable' : product.price %></p>
          </div>
          </div>
          </div>
            <%= button_to "buy", product.referal_link, class: 'col-6 hiive-card-btn hiive-card-btn-left' %>
            <%= button_to "more info", product_path(product), method: :get, class: 'col-6 hiive-card-btn hiive-card-btn-right' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

