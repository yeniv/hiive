<div class="container nav-padding profile-flex">

  <div class="user-info user-info-left">
    <div class="profile-user-card">
    </div>
  </div>

  <div class="user-center">

    <div class="profile-title profile-headline">
      <h1><span class=""><%= @user.first_name %>'s</span> <span class="">shop.</span> </h1>
    </div>

    <div class="container">
      <div class="row">

       <% @products.each do |product| %>
          <div class="col-4 hiive-card-container">

          <div class="hiive-card">

          <%#= cl_image_tag product.photo, width: 250, height: 250, crop: :fill, class: 'images-prod' %>

          <div class="hiive-card-photo" style="background-image: url(<%= product.photo %>)">
          </div>

          <div class="hiive-card-content">
          <p class="hiive-card-title"><%= product.title.truncate(70)%></p>
          <p class="hiive-card-price">â‚¬<%= product.price %></p>
          </div>
          </div>
            <%= button_to "buy", product.referal_link, class: 'col-6 hiive-card-btn hiive-card-btn-left' %>
            <%= button_to "more info", product_path(product), class: 'col-6 hiive-card-btn hiive-card-btn-right' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>

  <div class="user-info user-info-right">
    <div class="profile-user-card">
    </div>
  </div>

</div>

